<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head.ejs') %>
	<body>
		<header>
			<h2>Portfolio</h2>
			<h1>Kai van Wezel</h1>
		</header>
		<main>
			<section class="repos">
				<% data.forEach(repo => { %>
				<div class="repo-card">
					<a href="<%= repo.node.url%>">
						<h3><%= repo.node.name %></h3>
						<p class="repo-description"><%= repo.node.description %></p>
					</a>
				</div>
				<% }) %>
			</section>
			<a href="/?page=<%= page %>" class="more-button">Load more</a>
		</main>
	</body>
</html>
